generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  password String
  name     String
  photo    String?
  rooms    Room[]
  elements Element[]
  Chat     Chat[]
}

model Room {
  id        Int       @id @default(autoincrement())
  slug      String
  adminId   String
  createdAt DateTime  @default(now())
  admin     User      @relation(fields: [adminId], references: [id])
  elements  Element[]
  Chat      Chat[]
}

model Chat {
  id      String @id @default(uuid())
  message String
  roomId  Int
  room    Room   @relation(fields: [roomId], references: [id])
  userId  String
  user    User   @relation(fields: [userId], references: [id])
}
model Element {
  id        String   @id @default(uuid())
  type      String   // rectangle, ellipse, text, arrow, etc.
  x         Float
  y         Float
  width     Float?
  height    Float?
  angle     Float    @default(0)

  style     Json?    // { "strokeColor": "#000", "backgroundColor": "transparent", "strokeWidth": 2, "opacity": 0.9 }
  data      Json?    // { "text": "Hello", "fontSize": 16, "fontFamily": "Arial" }

  roomId    Int
  userId    String
  createdAt DateTime @default(now())

  room      Room     @relation(fields: [roomId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

